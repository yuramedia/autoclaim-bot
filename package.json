{
    "name": "autoclaim-bot",
    "module": "src/index.ts",
    "type": "module",
    "private": true,
    "scripts": {
        "start": "bun run deploy && bun run src/index.ts",
        "dev": "bun --watch run src/index.ts",
        "deploy": "bun run src/deploy-commands.ts",
        "format": "prettier --write ."
    },
    "devDependencies": {
        "@types/bun": "latest",
        "@types/node-cron": "^3.0.11",
        "prettier": "^3.8.1"
    },
    "peerDependencies": {
        "typescript": "^5.9.3"
    },
    "dependencies": {
        "axios": "^1.13.4",
        "discord.js": "^14.25.1",
        "graphql": "^16.12.0",
        "graphql-request": "^7.4.0",
        "mongoose": "^9.1.6",
        "node-cron": "^4.2.1",
        "universal-speedtest": "^3.0.0"
    },
    "prettier": {
        "tabWidth": 4,
        "trailingComma": "none",
        "arrowParens": "avoid",
        "printWidth": 120
    }
}
